<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.xicom.cms.service.mapper.LoginMapper">
    <resultMap type="default" id="default">
        <result property="regSeq"       column="REG_SEQ"    />
        <result property="regDe"        column="REG_DE"     />
        <result property="updSeq"       column="UPD_SEq"    />
        <result property="updDe"        column="UPD_DE"     />
        <result property="stat"         column="STAT"       />
    </resultMap>
    
   
    <insert id="addLogin">
        INSERT INTO TB_EMPL_LOG(EMPL_SN, IP_ADDR, LOGIN_DATE, WBSR)
        VALUES (#{empSeq}::INT8, #{regIp}, now(), #{regWb})
    </insert>

</mapper>
